<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Kayıt Ol</h5>
                        <form action="/Account/Register", method="POST">
                            {{> messages errors=errors}}
                            <div class="form-label-group mb-2">
                                <input type="text" name='username' id="username" class="form-control" placeholder="Kullanıcı Adı"
                                    required autofocus>
                            </div>
                            <div class="form-label-group mb-2">
                                <input type="email" name='email' id="email" class="form-control" placeholder="Email"
                                    required>
                            </div>
                            <div class="form-label-group mb-2">
                                <input type="text" name='phoneNumber' id="phoneNumber" class="form-control" placeholder="Telefon numarası"
                                    required>
                            </div>
                            <div class="form-label-group mb-2">
                                <input type="password" name="password" id="password" class="form-control" placeholder="Parola"
                                    required>
                            </div>
                            <div class="form-label-group mb-2">
                                <input type="password" name="password2" id="password2" class="form-control" placeholder="Parola Tekrar"
                                    required>
                            </div>
                            <button class="btn btn-lg btn-success btn-block" type="submit">KAYIT OL</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>